{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "serve",
            "isBackground": true,
            "problemMatcher": {
                "owner": "Webpack (Dev, Continuous)",
                "severity": "error",
                "fileLocation": "absolute",
                "source": "webpack-typescript",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Compiled",
                    "endsPattern": "Time: (\\d+)ms"
                },
                "pattern": [
                    {
                        "regexp": "ERROR in (.*)",
                        "file": 1,
                    },
                    {
                        "regexp": "(\\d+):(\\d+) (.*)",
                        "line": 1,
                        "column": 2,
                        "message": 3,
                    }
                ]
            }
        },
        {
            "type": "npm",
            "script": "lint",
            "problemMatcher": [
                "$tsc"
            ]
        }
    ]
}